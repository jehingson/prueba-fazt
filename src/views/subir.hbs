<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/imagen/subir" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Titulo">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>    
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="imagen" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Subir Archivo</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Subir Foto
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Descripcion</th>
                    <th>Operacions</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td><a href="{{imagenURL}}" target="_blank" class="btn btn-primary">View</a>
                        <a href="/imagen/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>